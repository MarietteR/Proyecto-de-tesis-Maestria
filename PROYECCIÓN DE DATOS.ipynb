def MMS(M):
    M=np.transpose(M)    
    mms=np.asarray([])
    
    for k in range(M.shape[1]):
        for f in range(M.shape[0]):
            M[-1][k]=0
            mms[f][k]=(M[f-1][k]+M[f][k])/2
    return (mms)
            
            
